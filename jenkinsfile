pipeline {
    agent any 

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/Anushagurrala/git-migration.git' 
            }
        }
        stage('Build Docker Image') {
            steps {
                    sh 'sudo docker build -t my-nginx-image .'
            }
        }
        stage('Deploy Nginx Container') {
            steps {
                    sh 'sudo docker run -d --name my-nginx-container my-nginx-image:latest'
            }
        }
    }
}
